<h2>Available drones</h2>
{{#each products}}
  <div>
    <h5>{{name}}</h5>
    <a href="/products/{{_id}}">See details</a>
    <div class="buttons">
      <button class="button-edit">
        <a href="/products/{{_id}}/edit"> Edit</a>
      </button>

      <form action="/products/{{_id}}/delete" method="POST">
        <button type="submit" class="btn btn-primary">Delete</button>
      </form>
    </div>
  </div>
{{/each}}